[Unit]
Description=I2C-to-Serial for GPSd
Before=gpsd.service

[Service]
Type=simple
Restart=on-failure
RestartSec=1
WorkingDirectory=/etc/systemd/system/gpsd-i2c.service.d
ExecStart=sudo /usr/bin/socat pty,rawer,link=/dev/gpsd0 EXEC:"python ./gpsd_i2c.py",pty,rawer

[Install]
RequiredBy=gpsd.service
WantedBy=multi-user.target